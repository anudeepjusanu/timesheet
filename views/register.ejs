<%- include('partials/header') %>
<div class="register-form-container">
    <div class="form-bg-container"></div>
    <div class="form-container">
        <h2 class="form-head">Register</h2>
        <% if(locals.error) { %>
            <div class="alert alert-danger"><%= error %></div>
        <% } %>
        <form method="post">
            <div class="input-group firstname-field">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" class="form-control" id="firstName" name="firstName" value="<%= locals.firstName || '' %>" placeholder="First name" required>
            </div>
            <div class="input-group lastname-field">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" class="form-control" id="lastName" name="lastName" value="<%= locals.lastName || '' %>" placeholder="Last name" required>
            </div>
            <div class="input-group username-field">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" class="form-control" id="username" name="username" value="<%= locals.username || '' %>" placeholder="Username" required>
            </div>
            <div class="input-group password-field">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password">
            </div> 
            <div class="form-group btn-field">
                <div class="col-sm-12 controls">
                    <button type="submit" class="btn btn-primary">Register</button>
                    <a href="/login" class="btn btn-link">Cancel</a>                        
                </div>          
            </div>
        </form>
    </div>
</div>
<%- include('partials/footer') %>